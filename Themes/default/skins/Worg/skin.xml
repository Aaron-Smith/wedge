<?xml version="1.0"?>
<skin>

	<name>
		Wine for Wedge.org
	</name>

	<type>
		replace
	</type>

	<comment><![CDATA[
		By Nao.
	]]></comment>

	<code for="ie6" include="scripts/pngfix.js scripts/ie6hover.js"><![CDATA[
	$('input[type=checkbox], input[type=radio]').addClass('ie_check');
	$('input[type=submit], input[type=button]').addClass('ie_button');
	DD_belatedPNG.fix('.ping,#wedgelogo,#footer,#footer div.frame');
	$.ie6hover();
	]]></code>

	<skeleton>
		<html>
			<body>
				<wrapper>
					<header>
						<logo_toggler />
						<search_box />
						<language_selector />
						<random_news />
					</header>
					<menu />
					<linktree />
					<content_wrap>
						<offside_wrap>
							<main_wrap>
								<top></top>
								<default>
									<main />
								</default>
							</main_wrap>
						</offside_wrap>
						<sidebar_wrap>
							<sidebar></sidebar>
						</sidebar_wrap>
					</content_wrap>
					<footer />
				</wrapper>
			</body>
		</html>
	</skeleton>

	<macro name="offside"><div id="edge">{body}</macro>

	<macro name="sidebar">
	<aside id="sidebar"><div class="column">{body}
	</div></aside>
	</div></macro>

	<macro name="offside" for="ie6,ie7">
	<table id="edge"><tr><td class="top">{body}</td></macro>

	<macro name="sidebar" for="ie6,ie7">
	<td id="sidebar" class="top"><div class="column">{body}</div></td></tr></table></macro>

</skin>
