<?xml version="1.0"?>
<!--
	The magical place where the layer/block layout is established.
	A layer is an array of blocks. Layers have optional '_before' and '_after' functions.
	Blocks only have one function but can be overloaded.
	Variables are accepted in functions, see <linktree:bottom />.
	You can comment your skeleton with HTML comment tags, like this one.

	Finally, you can redefine a skeleton by adding a skeleton.xml file to your skin. See the Warm skin for a sample.
-->
<skeleton>
	<html>
		<body>
			<wrapper>
				<header>
					<top_bar>
						<logo_toggler />
						<search_box />
						<language_selector />
					</top_bar>
				</header>
				<menu />
				<content_wrap>
					<offside_wrap>
						<main_wrap>
							<random_news />
							<linktree />
							<top></top>
							<default>
								<main />
							</default>
							<linktree:bottom />
						</main_wrap>
					</offside_wrap>
					<sidebar_wrap>
						<sidebar></sidebar>
					</sidebar_wrap>
				</content_wrap>
				<footer />
			</wrapper>
		</body>
	</html>
</skeleton>

<skeleton id="msg">
	<msg_wrap>
		<msg_author>
			<if SKIN_MOBILE>
				<msg_author_group_mobile />
			<else>
				<msg_author_title />
				<msg_author_avatar />
				<msg_author_group />
				<msg_author_badge />
				<msg_author_blurb />
				<msg_author_postcount />
				<msg_author_icons />
				<msg_author_cf />
				<msg_author_warning />
			</if>
		</msg_author>
		<msg_area>
			<if SKIN_MOBILE>
				<msg_header_mobile />
			<else>
				<msg_header />
			</if>
			<msg_ignored />
			<msg_body />
			<msg_bottom>
				<msg_actionbar />
				<msg_attachments />
				<msg_customfields />
				<msg_signature />
			</msg_bottom>
		</msg_area>
	</msg_wrap>
</skeleton>
